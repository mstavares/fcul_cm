<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/rawdata_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:text="Score" />

    <TextView
        android:id="@+id/rawdata_faults"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rawdata_score"
        android:textSize="16sp"
        android:text="Faults" />

    <TextView
        android:id="@+id/rawdata_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rawdata_faults"
        android:textSize="16sp"
        android:text="Time" />

    <TextView
        android:id="@+id/rawdata_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rawdata_time"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="Date" />
</RelativeLayout>